<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red_back"
        tools:context=".ui.fragment.LocationRequestFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintBottom_toTopOf="@+id/flLocationContainer">

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_location"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_location_sub"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textAlignment="center" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_back"
            android:id="@+id/flLocationContainer"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_white_profile"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_MyLocation"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawableRight="@drawable/ic_my_location"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Use My Location"
                    android:textColor="@color/black_text_color"
                    android:background="@drawable/bg_ash_background"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner_image" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/btn_CustomLocation"
                    android:drawableRight="@drawable/ic_location"
                    android:background="@drawable/bg_ash_background"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Custom Location"
                    android:textColor="@color/black_text_color"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner_image" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_group"
                    android:drawableRight="@drawable/ic_arrowbackios_baseline"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:background="@drawable/bg_red_border"
                    android:text="Set"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/banner_image" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@color/light_ash"></View>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>